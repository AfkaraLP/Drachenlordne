{
  "manifest_version": 2,
  "name": "Text Replacer",
  "version": "1.0",
  "description": "A Firefox extension to replace text on web pages",
   "permissions": [
     "activeTab"
   ],
   "icons": {
     "16": "icon16.png",
     "48": "icon48.png",
     "128": "icon128.png"
   },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}